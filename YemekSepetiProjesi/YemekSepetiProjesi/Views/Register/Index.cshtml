    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/menu-css/datas/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/menu-css/datas/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/menu-css/datas/css/main.css">
    <!--===============================================================================================-->
    <style>
        span {
            text-align: center;
            margin: auto auto;
            margin-top: 10px;
        }

        a {
            font-size: 15px;
        }

            a:hover {
                font-weight: bold;
            }

        input[type=text] {
            padding: 0;
            font-weight: bold;
            height: 55px;
            position: relative;
            left: 0;
            outline: none;
            border: 1px solid #cdcdcd;
            background-color: lightgray;
            font-size: 16px;
            padding: 10px;
        }

        input[type=password] {
            padding: 0;
            height: 55px;
            position: relative;
            font-weight: bold;
            left: 0;
            outline: none;
            border: 1px solid #cdcdcd;
            background-color: lightgray;
            font-size: 16px;
            padding: 10px;
        }
    </style>
</head>
<body>


    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-50 p-b-90">
                <form class="login100-form validate-form flex-sb flex-w" method="post">
                    <span class="login100-form-title p-b-51">
                        Kayıt Ol
                    </span>

                    <span style="margin:auto auto;margin-bottom:10px;">Kullanıcı Adı</span>

                    <div class="wrap-input100 validate-input m-b-16" data-validate="Kullanıcı adı boş geçilemez" style="margin-bottom:15px">
                        @Html.TextBoxFor(c => c.KullaniciAdi, new { @class = "form-control" })
                        @Html.ValidationMessageFor(b => b.KullaniciAdi, null, new { @class = "text-danger" })
                    </div>

                    <span style="margin:auto auto;margin-bottom:10px">Şifre</span>


                    <div class="wrap-input100 validate-input m-b-16" data-validate="Şifre boş geçilemez">
                        @Html.PasswordFor(c => c.Sifre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(b => b.Sifre, null, new { @class = "text-danger" })
                    </div>

                    @*<div class="flex-sb-m w-full p-t-3 p-b-24">
                            <div class="contact100-form-checkbox">
                                <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                                <label class="label-checkbox100" for="ckb1">
                                    Remember me
                                </label>
                            </div>

                            <div>
                                <a href="~/menu-css/datas/~/menu-css/data/#" class="txt1">
                                    Forgot?
                                </a>
                            </div>
                        </div>*@

                    <div class="container-login100-form-btn m-t-17">
                        <button class="login100-form-btn">
                            Kayıt Ol
                        </button>
                    </div>
                    <span>Eğer sisteme üye isen &nbsp;<a href="/Login/Index" style="text-decoration:underline;font-size:16px;margin-top:10px">Giriş Yap</a></span>
                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/menu-css/datas/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/menu-css/datas/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/menu-css/datas/vendor/bootstrap/js/popper.js"></script>
    <script src="~/menu-css/datas/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/menu-css/datas/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/menu-css/datas/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/menu-css/datas/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/menu-css/datas/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/menu-css/datas/js/main.js"></script>

</body>
</html>