@using YemekSepetiProjesi.Models.Entity
@model List<TBLYemekler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Bootstrap E-commerce Templates</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <!--[if ie]><meta content='IE=8' http-equiv='X-UA-Compatible'/><![endif]-->
    <!-- bootstrap -->
    <link href="~/homepage-css/asd/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/homepage-css/asd/bootstrap/css/bootstrap-responsive.min.css" rel="stylesheet">

    <link href="~/homepage-css/asd/themes/css/bootstrappage.css" rel="stylesheet" />

    <!-- global styles -->
    <link href="~/homepage-css/asd/themes/css/flexslider.css" rel="stylesheet" />
    <link href="~/homepage-css/asd/themes/css/main.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <!-- scripts -->
    <script src="~/homepage-css/asd/themes/js/jquery-1.7.2.min.js"></script>
    <script src="~/homepage-css/asd/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/homepage-css/asd/themes/js/superfish.js"></script>
    <script src="~/homepage-css/asd/themes/js/jquery.scrolltotop.js"></script>
    <style>
        a:hover {
            text-decoration: none;
            color:#ff6a00;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>
<body>
    <a href="/AnaSayfa/Index"><img src="~/Images/yemeklogo.png" style="margin-bottom:-30px;" class="center" /></a>
    <div id="top-bar" class="container">
        <div class="row">
            <div class="center">
                <ul class="user-menu">
                    <li><a href="~/AnaSayfa/Index/">Anasayfa</a></li>
                    <li><a href="~/AnaSayfa/SikSorulanSorular/">S.S.S</a></li>
                    <li><a href="~/AnaSayfa/Iletisim/">İletişim</a></li>
                    <li><a href="~/AnaSayfa/KullaniciSozlesmesi/">Kullanıcı Sözleşmesi</a></li>
                    <li><a><b> @User.Identity.Name </b></a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a href="/Dashboard/Index/">Admin Paneli</a></li>
                    }
                    <li><a href="/Login/Logout/">Çıkış Yap</a></li>
                </ul>
            </div>
        </div>
    </div>
    <section class="py-5">
        <!--Carousel Wrapper-->
        <div id="carousel-example-1z" class="carousel slide carousel-fade z-depth-1-half" data-ride="carousel">
            <!--Slides-->
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Images/slider1.png" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/slider2.png" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/slider3.png" alt="Third slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Images/slider4.png" alt="Third slide">
                </div>
            </div>
            <!--/.Slides-->
            <!--Controls-->
            <a class="carousel-control-prev" href="#carousel-example-1z" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-example-1z" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>

        </div>
        <!--/.Carousel Wrapper-->
    </section>
    <div id="wrapper" class="container" style="margin-top:-40px">
        <section class="main-content">

            <div class="active item" style="margin-left:75px;margin-top:50px">
                <ul class="thumbnails">
                    @if (Model != null)
                    {
                        foreach (var yemekler in Model)
                        {
                            <li class="span2">
                                <div class="product-box">
                                    <p><a href="/AnaSayfa/DetailPage/@yemekler.YemekID"><img src="@Url.Content("~/Images/"+@yemekler.ImageURL)" alt="" /></a></p>
                                    <a href="/AnaSayfa/DetailPage/@yemekler.YemekID" class="title">@yemekler.TBLKategoriler.KategoriAdi</a><br />
                                    <a href="/AnaSayfa/DetailPage/@yemekler.YemekID" class="category">@yemekler.YemekAdi</a>
                                    <p class="price">@yemekler.YemekFiyat ₺</p>
                                </div>
                            </li>
                        }

                    }
                </ul>
            </div>
        </section>
        <section id="copyright">
            <span>Erkan Eroğlu 18701804 - Tüm hakları saklıdır.</span>
        </section>
    </div>
    <script src="~/homepage-css/asd/themes/js/common.js"></script>
    <script src="~/homepage-css/asd/themes/js/jquery.flexslider-min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script type="text/javascript">
        $(function () {
            $(document).ready(function () {
                $('.flexslider').flexslider({
                    animation: "fade",
                    slideshowSpeed: 4000,
                    animationSpeed: 600,
                    controlNav: false,
                    directionNav: true,
                    controlsContainer: ".flex-container" // the container that holds the flexslider
                });
            });
        });
    </script>
</body>
</html>