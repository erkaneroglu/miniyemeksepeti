@model YemekSepetiProjesi.Models.Entity.TBLKategoriler
@{
    ViewBag.Title = "YeniKategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<form class="form-group" method="post" style="width:80%; margin:auto; margin-top:100px">
    @*<div>
            <label>Kategori Adı</label>
            <input type="text" class="form-control" name="KategoriAdi" />
        </div>*@
    <div>
        <label>Kategori Adı</label>
        @Html.TextBoxFor(m => m.KategoriAdi, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.KategoriAdi, "", new { @style = "color:red" })
    </div>
    <div style="margin-top:20px;">
        <button class="btn btn-info">Kategori Ekle</button>
    </div>
</form>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />


